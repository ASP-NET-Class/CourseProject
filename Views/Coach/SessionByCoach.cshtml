@model IEnumerable<CourseProject.Models.Session>
<h2>@Model.FirstOrDefault().Coach.CoachName</h2>
@{
    if (Model.Count() < 1)
    {
        <p><a asp-action="AddSession">Add a Session</a></p>
        <p>No session in database yet.</p>
    }
    else
    {
        <h3>All Sessions</h3>
        <table border="1">
            <tr>
                <th>Session ID</th>
                <th>Session Title</th>
                <th>Start Date of Session</th>
                <th>End Date of Session</th>
                <th>Seat Capacity</th>
                <th>Daily Start Time</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            @foreach (var session in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Coach"
                           asp-action="SwimmerName"
                           asp-route-id="@session.SessionId">
                            @session.SessionId
                    </a>
                </td>
                <td>@session.SessionTitle</td>
                <td>@session.StartDate</td>
                <td>@session.EndDate</td>
                <td>@session.SeatCapacity</td>
                <td>@session.DailyStartTime</td>
                <td><a asp-action="EditSession" asp-route-id="@session.SessionId">Edit</a></td>
                <td><a asp-action="DeleteSession" asp-route-id="@session.SessionId">Delete</a></td>
            </tr>
        }
        </table>
    }
}
<p><a asp-action="Index">Back to Coach Home</a></p>